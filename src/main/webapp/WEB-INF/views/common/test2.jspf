<%@ page language="java" contentType="text/html; charset=UTF-8"
	pageEncoding="UTF-8"%>
<%@ taglib prefix="c" uri="http://java.sun.com/jsp/jstl/core"%>

<!DOCTYPE html>
<html>
<head>
<style>
div { /* border: 3px solid red; */
	
}

hr {
	clear: both;
}
</style>


<script>


alert('${productser[3].productName}')

window.addEventListener('load', load)

function load() { 

	      var html = '';
	      for (var i = 0; i < ${productser.size()} ; i++) {
	        if (i % 4 == 0) {
	          html += '<div class="row">';
	        };
	        html += '<div class="col-sm-6 col-md-3">';
	        html += '<div class="thumbnail">';
	        html += '<a onclick="goPage(' + ${productser[i].productNumber} + ')"><img style="width:100%;" onError="this.src=\'/productserources/img/icon-img.png\'" src="/productserources/img/product/';
			var imgs = `${productser[i].productImage}`;
			var img = imgs.split('|');
			 
			html += img[0]; 
		    html += '"></a>';
	        html += '<div class="caption" style="overflow: hidden; text-overflow: ellipsis;">';
	        html += '<h3>' + ${productser[i].productName} + '</h3>';
	        html += '<h4>시작가격 : ' + ${productser[i].productLowestPrice} + ' 원</h4>';
	        html += '<h4>현재가격 : ' + ${productser[i].productLowestPrice * 3 / 2} + ' 원</h4>';
	        html += '<p>제품브랜드 : ' + ${productser[i].productBrand} + ' | 판매자 : ' + ${productser[i].userId} + ' | 제품수량 : ' + ${productser[i].productQuantity} + ' | 분류 : ' + ${productser[i].productCategory} + ' | 신용등급 : ' + ${productser[i].userCreditLevel} + ' | 등록일 : ' + ${productser[i].productDate} + ' | 마감일 : ' + ${productser[i].productEndDate} + '</p>';
	        html += '<div style="height:50px;overflow:hidden;">'
	        html += '<p>' + ${productser[i].productCondition} + '</p>';
	        html += '</div>'
	        html += '<div style="height:60px;overflow:hidden;">'
	        html += '<p>' + ${productser[i].productDesc} + '</p>';
	        html += '</div>'
	        html += '<p style="margin-top:10px;"><a href="#" class="btn btn-primary" role="button">입찰하기</a>';
	        html += '<a style="margin-left:10px;" href="#" class="btn btn-default" role="button" onclick="goPage(' + ${productser[i].productNumber} + ')">더보기</a></p>';
	        html += '</div></div></div>';
	        if (i % 4 == 3) {
	          html += '</div>';
	        }
	      }
	   
	      document.querySelector('#product-div').insertAdjacentHTML('beforebegin', html);
	    }


	
</script> 
</head>
<body>
<div id = product-div></div>
	
	
	<script>
		function goPage(productNumber) {
			location.href = '/product/' + productNumber;
		}
	</script>
</body>